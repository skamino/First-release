<%- include partials/header.ejs %>

<%- include partials/main_nav.ejs %>

    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div class="container">
      <div class="row">
          <div class="offset-md-3 col-md-6">
              <h1>Create Question</h1>
  
              <form class="form" method="POST">
                  <div class="form-group">
                      <label for="nameTextField">Enter a Question</label>
                      <input type="text" class="form-control"
                      id="questionTextField"
                      placeholder="Enter Survey Name"
                      name="Name" required>
                  </div>
  
                  <div class="form-group">
                      <label for="optATextField">Enter Response 1</label>
                      <input type="text" class="form-control"
                      id="optATextField"
                      placeholder="Option 1"
                      name="optA" required>
                  </div>
  
                  <div class="form-group">
                      <label for="optBTextField">Enter Response 2</label>
                      <input type="text" class="form-control"
                      id="optBTextField"
                      placeholder="Option 2"
                      name="optB" required>
                  </div>
  
                  <div class="form-group">
                    <label for="optCTextField">Enter Response 3</label>
                    <input type="text" class="form-control"
                    id="optCTextField"
                    placeholder="Option 3"
                    name="optC" required>
                </div>

                <div class="form-group">
                  <label for="optDTextField">Enter Response 4</label>
                  <input type="text" class="form-control"
                  id="optDTextField"
                  placeholder="Option 4"
                  name="optD" required>
              </div>

                  <button class="btn btn-primary" type="submit">
                      <i class="fas fa-edit"></i> add</button>
                  
                      <a href="/survey_question" class="btn btn-warning">
                          <i class="fas fa-undo"></i> Restart</a>
  
              </form>

