<%- include partials/header.ejs %>

<%- include partials/main_nav.ejs %>

    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <div class="container">
      <div class="row">
          <div class="offset-md-3 col-md-6">
              <h1>Create Survey</h1>
  
              <form class="form" method="POST">
                  <div class="form-group">
                      <label for="nameTextField">Survey Name</label>
                      <input type="text" class="form-control"
                      id="nameTextField"
                      placeholder="Enter Survey Name"
                      name="Name" required>
                  </div>
  
                  <div class="form-group">
                      <label for="optATextField">Author</label>
                      <input type="text" class="form-control"
                      id="autorTextField"
                      placeholder="Author"
                      name="Author" required>
                  </div>
  
                  <div class="form-group">
                      <label for="optBTextField">Enter A Description</label>
                      <input type="text" class="form-control"
                      id="descTextField"
                      placeholder="A short description of the survey"
                      name="Description" required>
                  </div>

                  <button class="btn btn-primary" type="submit">
                      <i class="fas fa-edit"></i> Create</button>
                  
                      <a href="/surveys" class="btn btn-warning">
                          <i class="fas fa-undo"></i> Clear</a>
  
              </form>

